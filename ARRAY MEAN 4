import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int size = sc.nextInt();
        int arr[]=new int[size];
        float mean=0;
        float sum=0;
        for(int i=0;i<size;i++){
              arr[i]=sc.nextInt();
            sum=sum+arr[i];
        }
        mean=sum/arr.length;
        System.out.printf("Array Mean Value is %.2f",mean);
    }
    }
